  <style lang="scss">
    header {
      background-color: rgb(var(--c-theme));
      box-shadow: 0 5px 5px rgba(var(--c-dark), 0);
      color: rgb(var(--c-light));
      position: sticky;
      top: 0;
      z-index: 9;

      nav {
        display: grid;
        grid-template: auto / 160px auto;
        margin: auto;
        max-width: var(--l-max-width);
        padding: 20px clamp(20px, 5vw, 40px);

        svg {
          cursor: pointer;

          &:last-of-type {
            display: none;
          }

          &:hover {
            color: rgba(var(--c-light), 0.2);
          }
        }

        ul {
          display: inherit;
          grid-template: auto / repeat(7, auto);
          gap: 40px;
          place-items: baseline;
          place-content: end;

          li {
            a {
              padding: 0 0 5px;

              &:hover {
                border-bottom: 2px solid currentColor;
              }

              svg {
                display: unset;
              }
            }

            &:nth-child(5) {
              font-size: 18px;
              font-weight: 400;
            }

            &:last-of-type {
              display: flex;
              gap: 20px;
              margin: auto 0;

              a {
                display: block;
                line-height: 0;
                padding: 0;

                &:hover {
                  border: none;
                }
              }
            }
          }
        }
      }
    }

    @media (max-width: 980px) {
      header {
        &.active {
          background-color: rgb(var(--c-theme)) !important;
          nav {
            ul {
              display: inherit;
            }
          }
        }
        nav {
          gap: 40px;

          svg {
            &:last-of-type {
              display: unset;
              margin: auto 0 0 auto;
            }
          }

          ul {
            gap: 20px;
            grid-column: 1 / -1;
            grid-template: auto / auto;
            place-content: start;
            display: none;
          }
        }
      }
    }
  </style>

  <script is:inline>
    const menuIcon = document.querySelector("#menu-icon");
    const header = document.querySelector("header");

    const logo = document.querySelector("#logo");

    logo.addEventListener("click", () => {
      document.location.href = "/";
    });

    menuIcon.addEventListener("click", () => header.classList.toggle("active"));
  </script>
</header>

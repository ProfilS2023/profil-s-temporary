---
import CatalogModalComponent from "../components/global/CatalogModalComponent.astro";
import CrumbsComponent from "../components/global/CrumbsComponent.astro";
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
---

<BaseLayout>
  <CrumbsComponent parent="Новости" href="/news" title={frontmatter.title} />

  <section>
    <h1>{frontmatter.title}</h1>

    <div class="galery">
      {
        frontmatter.image.map((item: string) => (
          <picture>
            <img src={item} alt="" />
          </picture>
        ))
      }
    </div>

    <article class="markdown-content">
      <slot />
    </article>
  </section>

  <CatalogModalComponent />
</BaseLayout>

<style lang="scss">
  section {
    display: grid;
    gap: 20px;
    margin: auto;
    max-width: var(--l-max-width);
    padding: 100px clamp(20px, 5vw, 40px);

    div {
      display: flex;
      flex-wrap: wrap;
      gap: 40px;

      picture {
        flex: 1;
        max-height: 620px;
        min-width: 240px;

        img {
          height: 100%;
          object-fit: cover;
          width: 100%;
        }
      }
    }

    h1 {
      margin: 40px 0 0;
    }
  }
</style>
